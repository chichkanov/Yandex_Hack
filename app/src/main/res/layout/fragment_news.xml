<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/view_rating"
        layout="@layout/view_news_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/rating_tv_rasp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_rating"
        android:layout_margin="10dp"
        android:text="Ближайшие занятия"
        android:textSize="20sp" />

    <include
        android:id="@+id/view_rasp"
        layout="@layout/view_news_rasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating_tv_rasp"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/deadline_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_rasp"
        android:layout_margin="10dp"
        android:text="Важное"
        android:textSize="20sp" />

    <include
        android:id="@+id/view_deadline"
        layout="@layout/view_news_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deadline_tv_desc"
        android:layout_margin="5dp" />
</RelativeLayout>