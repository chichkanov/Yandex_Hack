<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp">

        <TextView
            android:id="@+id/rasp_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DefaultName"
            android:textColor="@color/md_black_1000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rasp_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rasp_tv_name"
            android:maxLines="1"
            android:paddingTop="3dp"
            android:text="9 июля 9999, 19-00"
            android:textColor="@color/md_black_1000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/rasp_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/rasp_tv_time"
            android:layout_alignBottom="@+id/rasp_tv_time"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="9 часов"
            android:textColor="@color/md_black_1000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/rasp_tv_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rasp_tv_time"
            android:text="Default teacher"
            android:paddingTop="3dp"
            android:textColor="@color/md_black_1000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/rasp_tv_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rasp_tv_teacher"
            android:paddingTop="3dp"
            android:text="Default place"
            android:textColor="@color/md_black_1000"
            android:textSize="16dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>